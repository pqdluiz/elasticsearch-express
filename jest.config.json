{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "roots": ["src"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}
